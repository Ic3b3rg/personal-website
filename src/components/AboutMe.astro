---
import Card from "./Card/index.astro";
import { useTranslations } from "../i18n/utils";
const t = useTranslations(Astro.url);
---

<Card colSpan="md:col-span-1" rowSpan="md:row-span-6" title={t("home.aboutMe")}>
  <div class="flex flex-col gap-2">
    <div class="text-sm font-light">
      <p>
        {t("home.aboutMe1")}
        <br />
      </p>
    </div>
    <p class="text-sm font-light">
      {t("home.aboutMe2")}
      <b> {t("home.aboutMe2Bold1")} </b>
      <b> {t("home.aboutMe2Bold2")} </b> and
      {t("home.aboutMe2Bold3")}
      {t("home.aboutMe3")}
    </p>
    <p class="text-sm font-light">
      {t("home.aboutMe4")}
    </p>
  </div>
</Card>
